@{
    ViewData["Title"] = "Cart";
    List<Order> orders = ViewBag.Orders;
	List<>
}

<div class="text-center">
    <h1 class="display-4">Cart</h1>
</div>
<div class="container">
    @foreach (var order in orders)
    {
        <div class="row mt-4 align-items-center">
            <div class="col-md-2"></div>
            <partial name="_item_card" model="order.Item"/>
            <div style="width: 0.1%;"></div>
            <div class="col-md-5">
                <table>
					<tr>
						<td>
							Price:
						</td>
						<td id="price">
							<script>
								var unitprice = @order.Item.Price;
								var quantity = @order.Count;
								var price = unitprice * quantity;
								document.getElementById("price").innerText = price;
							</script>
						</td>
					</tr>					
                    <tr>
						<td>
							Quantity:
						</td>
						<td>
							@order.Count					
						</td>
                    </tr>
                </table>


            </div>
        </div>
    }


</div>

