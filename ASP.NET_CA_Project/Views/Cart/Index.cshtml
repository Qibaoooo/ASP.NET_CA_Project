            <div style="width: 0.1%;"></div>
            <div class="col-md-5">
                <table>
					<tr>
						<td>
							Price:
						</td>
						<td id="price">
							@*<script>
								var unitprice = parseFloat(@order.Item.Price);
								var quantity = parseFloat(@order.Count);
								var price = unitprice * quantity;
								document.getElementById("price").innerText = price;
							</script>*@
							@(order.Item.Price * order.Count)
						</td>
					</tr>					
                    <tr>
						<td>
							Quantity:
						</td>
						<td>
							<input type="number" value="@order.Count" id="inputnum">
						</td>
                    </tr>
                </table>


            </div>
        </div>
    }


</div>

